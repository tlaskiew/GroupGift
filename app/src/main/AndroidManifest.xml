<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tlaskie.groupgift">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".createAccount"
            android:parentActivityName=".Main"/>
        <activity android:name=".Hub" />
        <activity android:name=".wishlist"
            android:parentActivityName=".Hub"/>
        <activity android:name=".accountSettings"
            android:parentActivityName=".Hub"/>
        <activity android:name=".friends"
            android:parentActivityName=".Hub"/>
        <activity android:name=".secretGiftGroup"
            android:parentActivityName=".Hub"/>
        <activity android:name=".createGiftGroup"
            android:parentActivityName=".secretGiftGroup"/>
        <activity android:name=".friendsWishlist"
            android:parentActivityName=".Hub"/>
    </application>
</manifest>